<h1><%= @photo.photographer %></h1>
<h3><%= @photo.datetaken %></h3>
<h3><%= @photo.camera %></h3>
<h3><%= @photo.details %></h3>

<%= if @photo.user == current_user %>
<%= link_to "Edit Photo Details", edit_photo_path(@photo) %>
<%= link_to "Delete Photo", photo_path(@photo),
:data => {:confirm => "Are you sure you want to delete this photo?",
  :method => "delete"} %>
<% end %>

<p>
  <%= link_to 'Return to All Photos', photos_path %>
</p>
