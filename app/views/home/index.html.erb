<div id="welcome">
  <h1>Welcome to Flickr</h1>
  <% if user_signed_in? %>
  Logged in as <strong><%= current_user.email %> </strong>
  <% end %>

  <% if @photos.any? %>
  <div id="display">
    <ul>
      <% @photos.each do |photo| %>
      <%= link_to image_tag(photo.image.url(:thumb)), photo_path(photo) %>
      <% end %>
    </ul>
  </div>
  <% end %>
  
</div>
